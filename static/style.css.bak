body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    background-color: #121212;
    color: #e0e0e0;
    margin: 0;
    padding: 20px;
    display: flex;
    justify-content: center;
    align-items: flex-start;
}

.container {
    width: 100%;
    max-width: 900px;
    background-color: #1e1e1e;
    border-radius: 8px;
    padding: 25px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
}

h1 {
    text-align: center;
    color: #ffffff;
    margin-bottom: 25px;
    border-bottom: 2px solid #333;
    padding-bottom: 15px;
}

h2 {
    color: #bb86fc;
    margin-top: 30px;
    margin-bottom: 15px;
}

.status-box, .form-container, .queue-container, .results-container {
    background-color: #2a2a2a;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 25px;
}

.grid-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 25px;
}

.status-box p {
    margin: 8px 0;
    line-height: 1.6;
}

.status-box span {
    color: #03dac6;
    font-weight: bold;
}

input[type="text"] {
    width: 100%;
    padding: 12px;
    margin-bottom: 15px;
    border: 1px solid #444;
    border-radius: 4px;
    background-color: #333;
    color: #e0e0e0;
    box-sizing: border-box;
}

button {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 4px;
    background-color: #bb86fc;
    color: #121212;
    font-weight: bold;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #a362f7;
}

#form-message {
    margin-top: 15px;
    text-align: center;
    font-weight: bold;
}

.success {
    color: #03dac6;
}

.error {
    color: #cf6679;
}

.queue-container ul {
    list-style-type: none;
    padding: 0;
}

.queue-container li {
    background-color: #333;
    padding: 10px;
    border-radius: 4px;
    margin-bottom: 8px;
}

/* Results Table Styling */
.results-container table {
    width: 100%;
    border-collapse: collapse;
}

.results-container th, .results-container td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #444;
}

.results-container th {
    background-color: #333;
}

.results-container a {
    color: #03dac6;
    text-decoration: none;
    font-weight: bold;
}

.results-container a:hover {
    text-decoration: underline;
}
